{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
			
			"environment": {
				"MSVC_FLAGS": "/permissive- /W4 /w44365 /external:W3 /EHsc"
			},
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe" 
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-debug",
            "displayName": "x64 Debug",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug" ,
				"CMAKE_CXX_FLAGS": "$env{MSVC_FLAGS}"
				}
        },
        {
            "name": "x64-release",
            "displayName": "x64 Release",
            "inherits": "x64-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
				"CMAKE_CXX_FLAGS": "$env{MSVC_FLAGS} /O2 /Qfast_transcendentals"
            }
        },
		{
            "name": "clang-base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
			"environment": {
				"CLANG_FLAGS": "-pedantic-errors -Wall -Weffc++ -Wextra -Wconversion -Wsign-conversion"
			},
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "clang-debug",
            "displayName": "Clang Debug",
            "inherits": "clang-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_CXX_FLAGS": "$env{CLANG_FLAGS}"
            }
		},
		{
			"name": "clang-release",
			"displayName": "Clang Release",
			"inherits": "clang-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_CXX_FLAGS": "$env{CLANG_FLAGS} -O3"

			}
		},
		{
			"name": "clang18-base",
			"displayName": "Clang 18 Base",
			"hidden": true,
			"inherits": "clang-base",
			"cacheVariables": {
                "CMAKE_C_COMPILER": "clang-18",
                "CMAKE_CXX_COMPILER": "clang++-18"
            }
		},
        {
            "name": "clang18-debug",
            "displayName": "Clang 18 Debug",
            "inherits": "clang18-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_CXX_FLAGS": "$env{CLANG_FLAGS}"
            }
		},
		{
			"name": "clang18-release",
			"displayName": "Clang 18 Release",
			"inherits": "clang18-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_CXX_FLAGS": "$env{CLANG_FLAGS} -O3"

			}
		}
        
    ]
}
